.card.blue.lighten-5.hoverable
  .card-content.black-text
    %span.card-title
      Ready to sync github teams?
    %p
      = link_to "Review last changes in permissions", AppConfig.permissions_repo.url,
        target: "_blank"
  .card-action
    - if validation_errors.empty?
      = form_tag github_calculate_diff_path, method: :get do
        = button_tag "Show diff",
          type: :submit,
          class: 'btn btn-primary btn-lg diff',
          'data-disable-with' => disable_text
      = link_to "Teamless users", github_list_teamless_users_path, class: 'btn btn-primary btn-lg'
    - else
      %h3 Unable to parse following .yml files:
      %ul.list-group
      - validation_errors.each do |error|
        %li.list-group-item.list-group-item-danger= error
